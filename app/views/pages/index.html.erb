<% @pages.each do |page| %>
  <tr>
    <td><%= page.project_id %></td>
    <td><%= page.creator_id %></td>
    <td><%= page.updater_id %></td>
    <td><%= page.title %></td>
    <td><%= page.body %></td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>
    <td><%= link_to 'Destroy', page, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

