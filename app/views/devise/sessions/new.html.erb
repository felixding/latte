<h1><%= title "Sign in" %></h1>

<div class="primary">
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => :basic}) do |f| %>
		<p>
			<%= f.label :email %><br />
			<%= f.email_field :email %>
		</p>

		<p>
			<%= f.label :password %><br />
	  		<%= f.password_field :password %>
		</p>

		<% if devise_mapping.rememberable? -%>
	 	<div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
		<% end -%>

	  <p><%= f.submit "Sign in" %></p>
	<% end %>
</div>
<div class="secondary">
	<%= render :partial => "devise/shared/links" %>
</div>